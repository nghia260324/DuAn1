<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="40dp"
    android:paddingTop="30dp"
    android:background="@drawable/cus_bgr_rounde_corner_top_10">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageButton
                    android:background="@drawable/cus_bgr_btn_close"
                    android:padding="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/img_Close"
                    android:src="@drawable/baseline_close"/>
            </LinearLayout>
            <LinearLayout
                android:paddingHorizontal="12dp"
                android:layout_width="316dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tv_doimk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhaijaan"
                    android:text="Tạo danh sách công thức"
                    android:textColor="@color/orange_FDA"
                    android:textSize="25sp"/>

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logoapp"/>
            </LinearLayout>
       </LinearLayout>
        <LinearLayout
            android:gravity="top|center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:layout_marginTop="24dp"
                android:id="@+id/edt_name"
                android:layout_width="316dp"
                android:layout_height="56dp"
                android:background="@drawable/cus_bgr_edt"
                android:drawablePadding="6dp"
                android:fontFamily="@font/baloo_bhaijaan"
                android:hint="Nhập tên danh sách . . ."
                android:inputType="textPassword"
                android:paddingHorizontal="12dp"
                android:textColorHint="@color/gray_d9d" />
            <Button
                android:textAllCaps="false"
                android:id="@+id/btn_save"
                android:layout_width="316dp"
                android:layout_height="56dp"
                android:layout_marginTop="48dp"
                android:background="@drawable/cus_btn_start"
                android:fontFamily="@font/baloo_bhaijaan"
                android:text="Lưu"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </LinearLayout>

</LinearLayout>