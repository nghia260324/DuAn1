<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="top|center"
    android:id="@+id/item_making"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginRight="12dp"
            android:id="@+id/tv_location"
            android:layout_alignParentTop="true"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/cus_bgr_stt_making"
            android:text="1"
            android:paddingTop="2dp"
            android:textColor="@color/white"
            android:fontFamily="@font/baloo_bhaijaan"
            android:textAlignment="center"/>
        <EditText
            android:layout_toRightOf="@+id/tv_location"
            android:minLines="1"
            android:id="@+id/edt_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cus_bgr_edt_dialog_create_recipes"
            android:hint="Nội dung . . ."
            android:textColorHint="@color/white"
            android:fontFamily="@font/baloo_bhaijaan"
            android:padding="12dp"
            android:textSize="16sp"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_selected_pictureMaking"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/edt_content"
            android:layout_toRightOf="@+id/tv_location"
            android:layout_width="56dp"
            android:scaleType="centerCrop"
            android:layout_height="56dp"
            android:src="@drawable/ic_picture"/>
        <Button
            android:layout_alignBottom="@+id/img_selected_pictureMaking"
            android:layout_gravity="right"
            android:layout_alignParentEnd="true"
            android:id="@+id/btn_removeMaking"
            android:layout_marginTop="12dp"
            android:minWidth="0dp"
            android:minHeight="0dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/cus_bgr_btn_add_material"
            android:text="Xóa"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:fontFamily="@font/baloo_bhaijaan"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="6dp"
        android:layout_width="324dp"
        android:layout_height="1dp"
        android:background="@color/orange_FFD"/>
</LinearLayout>