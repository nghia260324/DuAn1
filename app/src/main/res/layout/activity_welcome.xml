<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".WelcomeActivity"
    android:background="@color/white">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textColor="@color/black_333"
        android:textSize="56sp"
        android:fontFamily="@font/baloo_bhaijaan"/>
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/img_welcome"/>
    <TextView
        android:id="@+id/tv_title2"
        android:textColor="@color/black_333"
        android:textAlignment="center"
        android:fontFamily="@font/baloo_bhaijaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Công thức nấu ăn"
        android:textSize="26sp"/>
    <TextView
        android:textColor="@color/black_333"
        android:textAlignment="center"
        android:fontFamily="@font/baloo_bhaijaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dễ dàng và nhanh chóng"
        android:textSize="26sp"/>
    <TextView
        android:fontFamily="@font/baloo_bhaijaan"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nhận mọi công thức nấu ăn tại nhà mới nhất\nnhanh chóng và dễ dàng"
        android:textSize="16sp"
        android:textColor="@color/gray_d5d"/>
    <Button
        android:textAllCaps="false"
        android:id="@+id/btn_start"
        android:layout_marginTop="100dp"
        android:layout_width="214dp"
        android:layout_height="56dp"
        android:background="@drawable/cus_btn_start"
        android:text="Bắt Đầu"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:fontFamily="@font/baloo_bhaijaan"/>
</LinearLayout>