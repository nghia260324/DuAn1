<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_banner"
                android:src="@drawable/sup"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="320dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/cus_bgr_sub_recipe_details"/>
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="12dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_back"/>
            <ImageButton
                android:id="@+id/btn_more"
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_more"/>
            <ImageButton
                android:layout_marginTop="12dp"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@+id/btn_more"
                android:layout_alignParentTop="true"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/ic_save"/>
        </RelativeLayout>
        <LinearLayout
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_formulaName"
                android:textColor="@color/black_333"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo_bhaijaan"
                android:text="Tên công thức"/>
            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="left|center_vertical">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_avatar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_def_avatar"
                    app:shapeAppearanceOverlay="@style/rounded_corner"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_nameUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nguyễn Văn A"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/black_333"
                        android:fontFamily="@font/baloo_bhai"
                        android:textSize="12sp"/>
                    <TextView
                        android:id="@+id/tv_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="12/11/2023"
                        android:layout_marginLeft="6dp"
                        android:textColor="@color/gray_d9d"
                        android:fontFamily="@font/baloo_bhai"
                        android:textSize="10sp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="12dp"
                android:background="@drawable/cus_bgr_btn_add_material">
                <ImageView
                    android:layout_marginRight="6dp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@drawable/ic_save"/>
                <TextView
                    android:textColor="@color/white"
                    android:fontFamily="@font/baloo_bhaijaan"
                    android:text="Lưu công thức"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_width="324dp"
                android:layout_height="2dp"
                android:background="@color/orange_FFD"/>
            <TextView
                android:id="@+id/tv_ration"
                android:layout_marginTop="24dp"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khẩu phần: 4 người"
                android:fontFamily="@font/baloo_bhai_2"
                android:textColor="@color/black_333"
                android:drawableStart="@drawable/ic_user_black"/>
            <TextView
                android:id="@+id/tv_cookingTime"
                android:layout_marginTop="12dp"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian nấu: 30 phút"
                android:fontFamily="@font/baloo_bhai_2"
                android:textColor="@color/black_333"
                android:drawableStart="@drawable/ic_meal"/>
            <RelativeLayout
                android:id="@+id/layout_line"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_width="324dp"
                android:layout_height="2dp"
                android:background="@color/orange_FFD"/>
            <TextView
                android:layout_marginTop="24dp"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nguyên Liệu"
                android:fontFamily="@font/baloo_bhaijaan"
                android:textColor="@color/black_333"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_material"
            android:paddingHorizontal="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="12dp"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cách làm"
                android:fontFamily="@font/baloo_bhaijaan"
                android:textColor="@color/black_333"/>
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/layout_making"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:nestedScrollingEnabled="false"
                android:scrollbars="vertical"
                android:id="@+id/rcv_making"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/tv_comment"
                android:layout_marginTop="24dp"
                android:drawablePadding="6dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bình luận(0)"
                android:fontFamily="@font/baloo_bhaijaan"
                android:textColor="@color/black_333"/>
            <TextView
                android:id="@+id/tv_noneComment"
                android:layout_marginTop="12dp"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/baloo_bhai"
                android:textColor="@color/black_333"
                android:textSize="14sp"
                android:text="Chưa có bình luận nào về công thức này."/>
            <LinearLayout
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:id="@+id/layout_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="12dp">

            </LinearLayout>
            <RelativeLayout
                android:id="@+id/line_comment"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:layout_width="324dp"
                android:layout_height="2dp"
                android:background="@color/orange_FFD"/>
            <LinearLayout
                android:id="@+id/layout_addComment"
                android:layout_marginTop="12dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/img_CommmentUser"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_def_avatar"
                    app:shapeAppearanceOverlay="@style/rounded_corner"/>
                <EditText
                    android:layout_toRightOf="@+id/edt_location"
                    android:minLines="1"
                    android:id="@+id/edt_content"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:background="@drawable/shadow_bgr_comment_user"
                    android:hint="Nội dung . . ."
                    android:textColorHint="@color/gray_d9d"
                    android:fontFamily="@font/baloo_bhaijaan"
                    android:padding="12dp"
                    android:textSize="16sp"/>
                <ImageButton
                    android:id="@+id/btn_send"
                    android:layout_marginTop="6dp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/ic_send"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>