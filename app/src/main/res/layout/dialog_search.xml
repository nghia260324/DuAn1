<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:paddingHorizontal="12dp"
        android:background="@drawable/shadow_bgr_black"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/btn_backDialogSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_back"/>
        <EditText
            android:id="@+id/edt_searchDialog"
            android:inputType="text"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:textColor="@color/black_333"
            android:paddingHorizontal="6dp"
            android:background="@drawable/cus_bgr_edt_search"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:hint="Nhập tên các nguyên liệu . . ."
            android:fontFamily="@font/baloo_bhaijaan"
            android:textSize="14sp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_searchSuggestion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>