<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">
    <LinearLayout
        android:paddingHorizontal="12dp"
        android:background="@drawable/shadow_bgr_black"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/btn_backDialogSearch"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/ic_back"/>
        <EditText
            android:drawableEnd="@drawable/baseline_close"
            android:id="@+id/edt_searchDialog"
            android:inputType="text"
            android:singleLine="true"
            android:imeOptions="actionSearch"
            android:textColor="@color/black_333"
            android:paddingHorizontal="6dp"
            android:background="@drawable/cus_bgr_edt_search"
            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:hint="Nhập tên các nguyên liệu . . ."
            android:fontFamily="@font/baloo_bhaijaan"
            android:textSize="14sp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_allMaterial"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nguyên liệu (Thịt bò;...)"
        android:textColor="@color/black_333"
        android:fontFamily="@font/baloo_bhaijaan"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="12dp"
        android:id="@+id/rcv_searchSuggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/tv_notFound"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhaijaan"
        android:textSize="16sp"
        android:text="Không tìm thấy kết quả nào phù hợp !"
        android:textAlignment="center"
        android:layout_marginTop="12dp"
        android:textColor="@color/black_333"/>
    <LinearLayout
        android:animateLayoutChanges="true"
        android:padding="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="12dp"
        android:background="@drawable/shadow_bgr_while_rounde_corner_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/layout_showSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:textColor="@color/black_333"
                android:fontFamily="@font/baloo_bhaijaan"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Tìm kiếm theo nguyên liệu bạn đang có."/>
            <ImageView
                android:id="@+id/img_down"
                android:padding="6dp"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@drawable/ic_down_while"
                android:backgroundTint="@color/black_333"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:id="@+id/layout_materialMain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/layout_material"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            </LinearLayout>
            <LinearLayout
                android:layout_below="@+id/layout_material"
                android:layout_alignParentEnd="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/btn_save"
                    android:layout_marginRight="6dp"
                    android:textSize="15.4sp"
                    android:layout_marginTop="12dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="6dp"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cus_bgr_btn_add_material"
                    android:text="Tìm kiếm"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/baloo_bhaijaan"
                    android:drawablePadding="6dp"/>
                <Button
                    android:layout_marginLeft="6dp"
                    android:id="@+id/btn_addMaterial"
                    android:layout_marginTop="12dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:padding="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cus_bgr_btn_add_material"
                    android:text="Nguyên liệu"
                    android:textColor="@color/white"
                    android:textAllCaps="false"
                    android:fontFamily="@font/baloo_bhaijaan"
                    android:drawableStart="@drawable/ic_create"
                    android:drawablePadding="6dp"/>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>