<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.SearchFragment">

    <LinearLayout
        android:background="@color/gray_ece"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="top">
        <LinearLayout
            android:paddingHorizontal="12dp"
            android:background="@drawable/shadow_bgr_while"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@drawable/logoapp"/>
            <EditText
                android:id="@+id/edt_search"
                android:inputType="text"
                android:singleLine="true"
                android:imeOptions="actionSearch"
                android:textColor="@color/black_333"
                android:paddingHorizontal="6dp"
                android:background="@drawable/cus_bgr_edt_search"
                android:layout_marginLeft="12dp"
                android:layout_width="match_parent"
                android:layout_height="34dp"
                android:hint="Nhập tên các nguyên liệu . . ."
                android:fontFamily="@font/baloo_bhaijaan"
                android:textSize="14sp"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lịch sử tìm kiếm"
                    android:fontFamily="@font/baloo_bhaijaan"
                    android:textSize="16sp"
                    android:textColor="@color/black_333"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tìm kiếm gần đây của bạn"
                    android:fontFamily="@font/baloo_bhai_2"
                    android:textSize="12sp"
                    android:textColor="@color/black_333"
                    android:layout_marginLeft="12dp"/>
                        <TextView
                            android:id="@+id/tv_none"
                            android:layout_marginTop="12dp"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo_bhai"
                            android:textColor="@color/black_333"
                            android:textSize="14sp"
                            android:text="Bạn chưa tìm kiếm công thức nào !"/>
                <LinearLayout
                    android:layout_marginTop="12dp"
                    android:id="@+id/layout_history"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                </LinearLayout>
                <TextView
                    android:layout_marginTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Công thức gần đây bạn đã xem"
                    android:fontFamily="@font/baloo_bhai_2"
                    android:textSize="12sp"
                    android:textColor="@color/black_333"
                    android:layout_marginLeft="12dp"/>
                <TextView
                    android:id="@+id/tv_noneRecipe"
                    android:layout_marginTop="12dp"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:textColor="@color/black_333"
                    android:textSize="14sp"
                    android:text="Bạn chưa xem công thức nào !"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="12dp"
                    android:paddingHorizontal="6dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rcv_viewedRecipe"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Các loại món ăn phổ biến"
                    android:fontFamily="@font/baloo_bhaijaan"
                    android:textSize="16sp"
                    android:textColor="@color/black_333"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="12dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:nestedScrollingEnabled="false"
                    android:scrollbars="vertical"
                    android:paddingHorizontal="6dp"
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/rcv_formula_type" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>