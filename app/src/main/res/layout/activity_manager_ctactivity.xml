<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ManagerCTActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black_333"
        android:fontFamily="@font/baloo_bhaijaan"
        app:titleTextColor="@color/white"
        app:title="Quản lý công thức"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="12dp"
        android:fontFamily="@font/baloo_bhai_2"
        android:textStyle="bold"
        android:textColorHint="@color/gray_d9d"
        android:paddingHorizontal="12dp"
        android:hint="Tìm kiếm..."
        android:drawableRight="@drawable/baseline_search"
        android:drawablePadding="5dp"
        android:background="@drawable/round_edittext"
        android:id="@+id/edt_searchCT"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:padding="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/rcv_congthuc"
        />
</LinearLayout>